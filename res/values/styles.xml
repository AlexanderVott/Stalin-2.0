<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="Theme.EOT.Light" parent="@style/Theme.Sherlock.Light">
        <item name="android:windowNoTitle">true</item>
	</style>
    <style name="Theme.EOT.Light.FullScreen" parent="@style/Theme.EOT.Light" >
        <item name="android:windowFullscreen">true</item>
	</style>
    
    <style name="Theme.EOT.Black" parent="@style/Theme.Sherlock">
       <item name="android:windowNoTitle">true</item> 
    </style>
    <style name="Theme.EOT.Black.FullScreen" parent="@style/Theme.EOT.Black">
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <style name="Empty">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dip</item>
        <item name="android:layout_marginLeft">6dip</item>
        <item name="android:layout_marginRight">6dip</item>
        <item name="android:layout_marginTop">6dip</item>
        <item name="android:layout_marginBottom">6dip</item>
    </style>
    
    <style name="Theme.EOT.TextView" parent="@android:style/Widget.TextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#FFFFFF</item>
	</style>    
	
    <style name="Theme.EOT.Divider" parent="@style/Empty">
        <item name="android:background">@drawable/abs__tab_unselected_pressed_holo</item>
    </style>
    
    <style name="Theme.EOT.Divider.Light" parent="@style/Empty">
        <item name="android:background">@drawable/abs__tab_unselected_pressed_holo</item>
    </style>
    
    <style name="Theme.EOT.Light.TextView" parent="@android:style/Widget.TextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#000</item>
    </style>
    
    <style name="Theme.EOT.Black.TextView" parent="@android:style/Widget.TextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#FFF</item>
    </style>
    
    <style name="Theme.EOT.Light.TextView.Bold" parent="@style/Theme.EOT.Light.TextView">
        <item name="android:paddingLeft">6dip</item>
		<item name="android:paddingRight">6dip</item>
		<item name="android:paddingTop">2dip</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#000</item>
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    
    <style name="Theme.EOT.Light.TextView.Bold.Red" parent="@style/Theme.EOT.Light.TextView.Bold">
        <item name="android:textColor">#cc0000</item>
    </style>
    
    <style name="Theme.EOT.Black.TextView.Bold" parent="@style/Theme.EOT.Light.TextView">
        <item name="android:paddingLeft">6dip</item>
		<item name="android:paddingRight">6dip</item>
		<item name="android:paddingTop">2dip</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#FFF</item>
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    
    <style name="Theme.EOT.Light.ScrollView" parent="@android:style/Widget.ScrollView">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarThumbVertical">@drawable/thumb01</item>
    </style>
    
    <style name="Theme.EOT.Black.ScrollView" parent="@android:style/Widget.ScrollView">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarThumbVertical">@drawable/thumb01_dark</item>
    </style>

</resources>