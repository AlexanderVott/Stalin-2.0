<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.FouregoStudio.Stalin"
    android:installLocation="preferExternal"
    android:versionCode="3"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:allowBackup="false"
        android:theme="@style/Theme.Sherlock" >
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".MainViewPagerActivity"
            android:label="@string/app_name"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".VolumeListFragment" />
        <activity
            android:name=".ChaptersListActivity"
            android:configChanges="orientation" />
        <activity
            android:name=".ReaderActivity" />
        <activity
            android:name=".BookmarkDialogActivity"
            android:configChanges="orientation" />
        <activity
            android:name=".BookmarksFragment" />
        <activity 
            android:name=".PreferencesActivity" />
        <activity 
            android:name=".PreferencesMainFragment" />
        <activity
            android:name=".AboutActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar" />
    </application>

</manifest>